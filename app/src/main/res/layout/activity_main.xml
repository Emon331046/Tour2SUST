<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.tour2sust.MainActivity">

    <ImageView
        android:id="@+id/homepageImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/homepage" />
    <Button
        android:id="@+id/ViewPlacesButton"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:text="View Places"
        android:textSize="18dp"
        android:textColor="#4A148C"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:layout_marginBottom="125dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/HistoryOfSUSTButton"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:text="History of SUST"
        android:textSize="18dp"
        android:textColor="#4A148C"
        android:fontFamily="sans-serif"
        android:textAllCaps="false"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
